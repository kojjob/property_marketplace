        <div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 text-white">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 21v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21m0 0h4.5V3.545M12.75 21h7.5V10.75M2.25 21h1.5m18 0h-18M2.25 9l4.5-1.636M18.75 3l-1.5.545m0 6.205l3 1m1.5.5l-1.5-.5M6.75 7.364V3h-3v18m3-13.636l10.5-3.819" />
          </svg>
        </div>
        <span class="text-xl font-bold">PropertyHub</span>
      <% end %>
    </div>

    <!-- Mobile: User dropdown when signed in, Auth dropdown when not -->
    <% if user_signed_in? %>
      <div class="lg:hidden dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full bg-primary text-primary-content flex items-center justify-center">
            <span class="text-lg font-semibold"><%= current_user.email[0].upcase %></span>
          </div>
        </label>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
          <li class="menu-title">
            <span><%= current_user.email %></span>
          </li>
          <li><%= link_to "Dashboard", "#" %></li>
          <% if current_user.profile.present? %>
            <li><%= link_to "My Profile", profile_path(current_user.profile) %></li>
            <li><%= link_to "Edit Profile", edit_profile_path(current_user.profile) %></li>
          <% end %>
          <li><%= link_to "Account Settings", edit_user_registration_path %></li>
          <li><%= link_to "My Properties", properties_path(user_id: current_user.id) %></li>
          <li><%= link_to "Saved Searches", "#" %></li>
          <li class="mt-2">
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-error btn-sm btn-block" %>
          </li>
        </ul>
      </div>
    <% else %>
      <div class="lg:hidden dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost btn-circle">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
          </svg>
        </label>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-40">
          <li>
            <%= link_to "Sign In", new_user_session_path, class: "font-medium" %>
          </li>
          <li>
            <%= link_to "Sign Up", new_user_registration_path, class: "font-medium text-primary" %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</header>
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Properties</h1>
    <% if user_signed_in? %>
      <%= link_to "Add Property", new_property_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @properties.each do |property| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-6">
          <h2 class="text-xl font-semibold mb-2">
            <%= link_to property.title, property, class: "hover:text-blue-600" %>
          </h2>
          <p class="text-gray-600 mb-2"><%= property.property_type %></p>
          <p class="text-gray-600 mb-2"><%= property.city %>, <%= property.state %></p>
          <p class="text-2xl font-bold text-blue-600">$<%= number_with_delimiter(property.price) %></p>
          <div class="mt-4 text-sm text-gray-500">
            <% if property.bedrooms.present? %>
              <span><%= property.bedrooms %> bed</span>
            <% end %>
            <% if property.bathrooms.present? %>
              <span class="ml-4"><%= property.bathrooms %> bath</span>
            <% end %>
            <% if property.square_feet.present? %>
              <span class="ml-4"><%= number_with_delimiter(property.square_feet) %> sqft</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @properties.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg">No properties found.</p>
    </div>
  <% end %>
</div>
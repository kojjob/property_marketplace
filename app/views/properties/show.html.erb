<!-- Property Detail Page -->
<div class="min-h-screen bg-gray-50" data-controller="property-detail">
  <!-- Breadcrumb Navigation -->
  <div class="bg-white shadow-sm border-b">
    <div class="container mx-auto px-4 py-4">
      <nav class="flex items-center space-x-2 text-sm text-gray-600">
        <%= link_to root_path, class: "hover:text-blue-600 transition-colors" do %>
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          Home
        <% end %>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <%= link_to "Properties", properties_path, class: "hover:text-blue-600 transition-colors" %>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-gray-900 font-medium"><%= @property.title %></span>
      </nav>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column - Property Details -->
      <div class="lg:col-span-2">
        <!-- Property Images -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8">
          <% if @property.images.attached? && @property.images.any? %>
            <div class="relative h-96 bg-gray-200">
              <%= image_tag @property.images.first, class: "w-full h-full object-cover" %>
              <% if @property.images.count > 1 %>
                <div class="absolute bottom-4 right-4 bg-black bg-opacity-50 text-white px-3 py-1 rounded-lg text-sm">
                  <%= @property.images.count %> photos
                </div>
              <% end %>
            </div>
            <% if @property.images.count > 1 %>
              <div class="p-4 bg-gray-50">
                <div class="grid grid-cols-4 gap-2">
                  <% @property.images[1..4].each do |image| %>
                    <div class="aspect-square bg-gray-200 rounded-lg overflow-hidden">
                      <%= image_tag image, class: "w-full h-full object-cover hover:opacity-80 transition-opacity cursor-pointer" %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="h-96 bg-gray-200 flex items-center justify-center">
              <div class="text-center text-gray-500">
                <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <p class="text-lg font-medium">No images available</p>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Property Information -->
        <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
          <div class="mb-6">
            <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @property.title %></h1>
            <p class="text-lg text-gray-600 mb-4"><%= @property.address %>, <%= @property.city %>, <%= @property.state %> <%= @property.zip_code %></p>
            <div class="text-4xl font-bold text-blue-600">$<%= number_with_delimiter(@property.price) %></div>
          </div>

          <!-- Property Features -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
            <% if @property.bedrooms.present? %>
              <div class="text-center p-4 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-gray-900"><%= @property.bedrooms %></div>
                <div class="text-sm text-gray-600">Bedrooms</div>
              </div>
            <% end %>
            <% if @property.bathrooms.present? %>
              <div class="text-center p-4 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-gray-900"><%= @property.bathrooms %></div>
                <div class="text-sm text-gray-600">Bathrooms</div>
              </div>
            <% end %>
            <% if @property.square_feet.present? %>
              <div class="text-center p-4 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-gray-900"><%= number_with_delimiter(@property.square_feet) %></div>
                <div class="text-sm text-gray-600">Square Feet</div>
              </div>
            <% end %>
            <div class="text-center p-4 bg-gray-50 rounded-lg">
              <div class="text-2xl font-bold text-gray-900"><%= @property.property_type.humanize %></div>
              <div class="text-sm text-gray-600">Property Type</div>
            </div>
          </div>

          <!-- Description -->
          <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Description</h2>
            <div class="text-gray-700 leading-relaxed">
              <%= simple_format(@property.description) %>
            </div>
          </div>

          <!-- Property Details -->
          <div class="border-t pt-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Property Details</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Basic Information</h3>
                <div class="space-y-2 text-sm">
                  <div class="flex justify-between">
                    <span class="text-gray-600">Property Type:</span>
                    <span class="font-medium"><%= @property.property_type.humanize %></span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Status:</span>
                    <span class="font-medium">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @property.status == 'active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                        <%= @property.status.humanize %>
                      </span>
                    </span>
                  </div>
                  <% if @property.bedrooms.present? %>
                    <div class="flex justify-between">
                      <span class="text-gray-600">Bedrooms:</span>
                      <span class="font-medium"><%= @property.bedrooms %></span>
                    </div>
                  <% end %>
                  <% if @property.bathrooms.present? %>
                    <div class="flex justify-between">
                      <span class="text-gray-600">Bathrooms:</span>
                      <span class="font-medium"><%= @property.bathrooms %></span>
                    </div>
                  <% end %>
                  <% if @property.square_feet.present? %>
                    <div class="flex justify-between">
                      <span class="text-gray-600">Square Feet:</span>
                      <span class="font-medium"><%= number_with_delimiter(@property.square_feet) %></span>
                    </div>
                  <% end %>
                </div>
              </div>

              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-3">Location</h3>
                <div class="space-y-2 text-sm">
                  <div class="flex justify-between">
                    <span class="text-gray-600">Address:</span>
                    <span class="font-medium"><%= @property.address %></span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">City:</span>
                    <span class="font-medium"><%= @property.city %></span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">State:</span>
                    <span class="font-medium"><%= @property.state %></span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-gray-600">ZIP Code:</span>
                    <span class="font-medium"><%= @property.zip_code %></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Contact & Actions -->
      <div class="lg:col-span-1">
        <!-- Contact Card -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-gray-300 rounded-full mx-auto mb-4 flex items-center justify-center">
              <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900">Contact Agent</h3>
            <p class="text-gray-600"><%= @property.user.email.split('@').first.humanize %></p>
          </div>

          <div class="space-y-3">
            <% if user_signed_in? %>
              <%= link_to "mailto:#{@property.user.email}?subject=Inquiry about #{@property.title}",
                  class: "w-full bg-blue-600 text-white py-3 px-4 rounded-lg font-medium hover:bg-blue-700 transition-colors text-center block" do %>
                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                Send Message
              <% end %>

              <% if defined?(@is_favorited) && @is_favorited %>
                <%= button_to unfavorite_property_path(@property), method: :delete,
                    class: "w-full bg-gray-500 text-white py-3 px-4 rounded-lg font-medium hover:bg-gray-600 transition-colors" do %>
                  <svg class="w-5 h-5 inline mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                  </svg>
                  Remove from Favorites
                <% end %>
              <% else %>
                <%= button_to favorite_property_path(@property), method: :post,
                    class: "w-full bg-red-500 text-white py-3 px-4 rounded-lg font-medium hover:bg-red-600 transition-colors" do %>
                  <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                  </svg>
                  Add to Favorites
                <% end %>
              <% end %>
            <% else %>
              <%= link_to new_user_session_path,
                  class: "w-full bg-blue-600 text-white py-3 px-4 rounded-lg font-medium hover:bg-blue-700 transition-colors text-center block" do %>
                Sign in to Contact
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- Property Info Card -->
        <div class="bg-white rounded-xl shadow-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Property Information</h3>
          <div class="space-y-3 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600">Property ID:</span>
              <span class="font-mono font-semibold">PM<%= @property.id.to_s.rjust(6, '0') %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Listed:</span>
              <span class="font-medium"><%= @property.created_at.strftime("%B %d, %Y") %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Updated:</span>
              <span class="font-medium"><%= @property.updated_at.strftime("%B %d, %Y") %></span>
            </div>
          </div>
        </div>

        <!-- Edit Actions (for property owner) -->
        <% if user_signed_in? && @property.user == current_user %>
          <div class="bg-white rounded-xl shadow-lg p-6 mt-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Manage Property</h3>
            <div class="space-y-3">
              <%= link_to edit_property_path(@property),
                  class: "w-full bg-yellow-500 text-white py-2 px-4 rounded-lg font-medium hover:bg-yellow-600 transition-colors text-center block" do %>
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Edit Property
              <% end %>

              <%= button_to @property, method: :delete,
                  confirm: "Are you sure you want to delete this property?",
                  class: "w-full bg-red-500 text-white py-2 px-4 rounded-lg font-medium hover:bg-red-600 transition-colors" do %>
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete Property
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Back to Properties Link -->
  <div class="container mx-auto px-4 pb-8">
    <%= link_to properties_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"></path>
      </svg>
      Back to Properties
    <% end %>
  </div>
</div>
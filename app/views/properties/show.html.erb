<!-- Houzez-Inspired Property Detail Page -->
<div class="min-h-screen bg-gray-50"
     data-controller="framer-motion property-detail"
     data-framer-motion-animation-value="pageTransition">
  <!-- Breadcrumb Navigation -->
  <div class="bg-white shadow-sm border-b">
    <div class="container mx-auto px-4 py-4">
      <nav class="flex items-center space-x-2 text-sm text-gray-600">
        <%= link_to root_path, class: "hover:text-blue-600 transition-colors" do %>
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          Home
        <% end %>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <%= link_to "Properties", properties_path, class: "hover:text-blue-600 transition-colors" %>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-gray-900 font-medium"><%= @property.title %></span>
      </nav>
    </div>
  </div>
  <!-- Property Header Section -->
  <div class="bg-white shadow-lg border-b">
    <div class="container mx-auto px-4 py-8">
      <div class="flex flex-col lg:flex-row justify-between items-start gap-6"
           data-controller="framer-motion"
           data-framer-motion-animation-value="fadeIn"
           data-framer-motion-delay-value="0.2">
        <!-- Property Title and Details -->
        <div class="flex-1">
          <div class="flex items-start justify-between mb-4">
            <div>
              <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-3"><%= @property.title %></h1>
              <div class="flex items-center gap-2 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-600">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                </svg>
                <span class="text-gray-600 text-lg"><%= @property.address %>, <%= @property.city %>, <%= @property.state %> <%= @property.zip_code %></span>
              </div>
            </div>
          </div>
          <!-- Property Tags -->
          <div class="flex flex-wrap gap-3 mb-6">
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              <%= @property.listing_type&.humanize || "For Sale" %>
            </span>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-green-100 text-green-800">
              <%= @property.property_type&.humanize %>
            </span>
            <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
              <%= @property.status&.humanize %>
            </span>
          </div>
          <!-- Property Key Info -->
          <div class="flex flex-wrap gap-6 text-gray-600">
            <% if @property.bedrooms.present? %>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4a2 2 0 012-2h3a2 2 0 012 2v4m8-4V9a2 2 0 00-2-2h-3a2 2 0 00-2 2v8"></path>
                </svg>
                <span class="font-medium"><%= @property.bedrooms %></span>
                <span class="text-sm">Bedrooms</span>
              </div>
            <% end %>
            <% if @property.bathrooms.present? %>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span class="font-medium"><%= @property.bathrooms %></span>
                <span class="text-sm">Bathrooms</span>
              </div>
            <% end %>
            <% if @property.square_feet.present? %>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
                </svg>
                <span class="font-medium"><%= number_with_delimiter(@property.square_feet) %></span>
                <span class="text-sm">sq ft</span>
              </div>
            <% end %>
          </div>
          <!-- Average Rating -->
          <% if @property.listings.any? && @property.listings.first.average_rating > 0 %>
            <div class="flex items-center gap-2">
              <div class="flex items-center">
                <% (1..5).each do |i| %>
                  <% if i <= @property.listings.first.average_rating %>
                    <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  <% else %>
                    <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  <% end %>
                <% end %>
              </div>
              <span class="text-gray-600">(<%= @property.listings.first.reviews_count %> reviews)</span>
            </div>
          <% end %>
        </div>
        <!-- Price and Actions -->
        <div class="flex flex-col items-end gap-6">
          <div class="text-right">
            <div class="text-4xl lg:text-5xl font-bold text-blue-600 mb-2"><%= number_to_currency(@property.price) %></div>
            <% if @property.square_feet.present? %>
              <div class="text-lg text-gray-500"><%= number_to_currency(@property.price.to_f / @property.square_feet) %>/sqft</div>
            <% end %>
          </div>
          <!-- Action Buttons -->
          <div class="flex flex-wrap gap-3">
            <% if user_signed_in? %>
              <% if @is_favorited %>
                <%= button_to unfavorite_property_path(@property), method: :delete,
                    class: "inline-flex items-center px-6 py-3 border border-red-300 text-red-700 bg-red-50 hover:bg-red-100 rounded-lg font-medium transition-colors",
                    data: { action: "click->framer-motion#buttonClick" } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 mr-2">
                    <path d="M11.645 20.91l-.007-.003-.022-.012a15.247 15.247 0 01-.383-.218 25.18 25.18 0 01-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0112 5.052 5.5 5.5 0 0116.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 01-4.244 3.17 15.247 15.247 0 01-.383.219l-.022.012-.007.004-.003.001a.752.752 0 01-.704 0l-.003-.001z" />
                  </svg>
                  Saved
                <% end %>
              <% else %>
                <%= button_to favorite_property_path(@property), method: :post,
                    class: "inline-flex items-center px-6 py-3 border border-gray-300 text-gray-700 bg-white hover:bg-gray-50 rounded-lg font-medium transition-colors",
                    data: { action: "click->framer-motion#favoriteHeart" } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                  </svg>
                  Save Property
                <% end %>
              <% end %>
            <% end %>
            <div data-controller="property-contact" data-property-contact-phone-value="+1 (555) 123-4567">
              <% if user_signed_in? && @property.user != current_user && current_user.can_message?(@property.user) %>
                <% existing_conversation = current_user.conversation_with(@property.user) %>
                <% if existing_conversation %>
                  <%= link_to conversation_path(existing_conversation),
                      class: "inline-flex items-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium transition-colors shadow-lg mr-3" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                    Message Owner
                  <% end %>
                <% else %>
                  <%= form_with url: conversations_path, method: :post, local: true, class: "inline-block mr-3" do |f| %>
                    <%= f.hidden_field :recipient_id, value: @property.user.id %>
                    <%= f.button type: "submit",
                        class: "inline-flex items-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg font-medium transition-colors shadow-lg" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                      </svg>
                      Message Owner
                    <% end %>
                  <% end %>
                <% end %>
              <% elsif user_signed_in? && @property.user != current_user && !current_user.can_message?(@property.user) %>
                <div class="inline-flex items-center px-6 py-3 bg-gray-300 text-gray-600 rounded-lg font-medium cursor-not-allowed mr-3" title="Owner has disabled messaging">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                  </svg>
                  Messaging Disabled
                </div>
              <% end %>
              <button class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors shadow-lg"
                      data-action="click->property-contact#contactAgent">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
                Contact Agent
              </button>
              <button class="inline-flex items-center px-6 py-3 border border-blue-600 text-blue-600 bg-white hover:bg-blue-50 rounded-lg font-medium transition-colors"
                      data-action="click->property-contact#scheduleTour">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5a2.25 2.25 0 002.25-2.25m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5a2.25 2.25 0 012.25 2.25v7.5" />
                </svg>
                Schedule Tour
              </button>
              <button class="inline-flex items-center px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg font-medium transition-colors"
                      data-action="click->property-contact#callNow">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
                Call Now
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Property Gallery and Details -->
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column - Gallery and Description -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Image Gallery -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden"
             data-controller="framer-motion property-gallery"
             data-framer-motion-animation-value="slideUp"
             data-framer-motion-delay-value="0.3">
          <div class="relative">
            <% if @property.images.any? %>
              <!-- Main Image Display -->
              <div class="relative h-96 lg:h-[500px] overflow-hidden">
                <% @property.images.each_with_index do |image, index| %>
                  <div id="slide<%= index + 1 %>"
                       class="carousel-item absolute inset-0 transition-opacity duration-300 <%= index == 0 ? 'opacity-100' : 'opacity-0' %>"
                       data-property-gallery-target="slide">
                    <%= image_tag image, class: "w-full h-full object-cover" %>
                  </div>
                <% end %>
                <!-- Navigation Arrows -->
                <button class="absolute left-4 top-1/2 transform -translate-y-1/2 w-12 h-12 bg-white/90 hover:bg-white rounded-full shadow-lg flex items-center justify-center transition-colors"
                        data-property-gallery-target="prevBtn"
                        data-action="click->property-gallery#previousImage">
                  <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                  </svg>
                </button>
                <button class="absolute right-4 top-1/2 transform -translate-y-1/2 w-12 h-12 bg-white/90 hover:bg-white rounded-full shadow-lg flex items-center justify-center transition-colors"
                        data-property-gallery-target="nextBtn"
                        data-action="click->property-gallery#nextImage">
                  <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </button>
                <!-- Image Counter -->
                <div class="absolute top-4 right-4 bg-black/60 text-white px-4 py-2 rounded-lg text-sm font-medium">
                  <span data-property-gallery-target="counter">1</span> / <%= @property.images.count %>
                </div>
                <!-- Fullscreen Button -->
                <button class="absolute top-4 left-4 bg-black/60 hover:bg-black/80 text-white p-2 rounded-lg transition-colors"
                        data-action="click->property-gallery#toggleFullscreen">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
                  </svg>
                </button>
              </div>
              <!-- Thumbnail Navigation -->
              <div class="p-4 bg-gray-50">
                <div class="flex gap-3 overflow-x-auto pb-2" data-property-gallery-target="thumbnails">
                  <% @property.images.each_with_index do |image, index| %>
                    <button class="flex-none w-20 h-16 rounded-lg overflow-hidden border-2 transition-all duration-200 <%= index == 0 ? 'border-blue-500 ring-2 ring-blue-200' : 'border-gray-200 hover:border-blue-300' %>"
                            data-property-gallery-target="thumbnail"
                            data-index="<%= index %>"
                            data-action="click->property-gallery#showImage">
                      <%= image_tag image, class: "w-full h-full object-cover" %>
                    </button>
                  <% end %>
                </div>
              </div>
            <% else %>
              <!-- Placeholder Image -->
              <div class="h-96 lg:h-[500px] bg-gray-100 flex items-center justify-center">
                <div class="text-center">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-20 h-20 mx-auto text-gray-400 mb-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 15.75 5.159-5.159a2.25 2.25 0 0 1 3.182 0l5.159 5.159m-1.5-1.5 1.409-1.409a2.25 2.25 0 0 1 3.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 0 0 1.5-1.5V6a1.5 1.5 0 0 0-1.5-1.5H3.75A1.5 1.5 0 0 0 2.25 6v12a1.5 1.5 0 0 0 1.5 1.5Zm10.5-11.25h.008v.008h-.008V8.25Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                  </svg>
                  <p class="text-gray-500 text-lg">No images available</p>
                  <p class="text-gray-400 text-sm mt-1">Property images will appear here</p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <!-- Property Details Tabs -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden"
             data-controller="framer-motion property-tabs"
             data-framer-motion-animation-value="slideUp"
             data-framer-motion-delay-value="0.4">
          <!-- Tab Navigation -->
          <div class="bg-gray-50 px-6 py-4 border-b" data-property-tabs-target="tabsNav">
            <div class="flex space-x-6">
              <a class="px-4 py-2 rounded-lg font-medium transition-all duration-200 bg-blue-600 text-white shadow-md"
                 data-property-tabs-target="tab" data-tab="overview" data-action="click->property-tabs#switchTab">Overview</a>
              <a class="px-4 py-2 rounded-lg font-medium transition-all duration-200 text-gray-600 hover:bg-blue-50 hover:text-blue-600"
                 data-property-tabs-target="tab" data-tab="details" data-action="click->property-tabs#switchTab">Details</a>
              <a class="px-4 py-2 rounded-lg font-medium transition-all duration-200 text-gray-600 hover:bg-blue-50 hover:text-blue-600"
                 data-property-tabs-target="tab" data-tab="features" data-action="click->property-tabs#switchTab">Features</a>
              <a class="px-4 py-2 rounded-lg font-medium transition-all duration-200 text-gray-600 hover:bg-blue-50 hover:text-blue-600"
                 data-property-tabs-target="tab" data-tab="location" data-action="click->property-tabs#switchTab">Location</a>
            </div>
          </div>
          <div class="p-6">
            <!-- Overview Tab -->
            <div class="tab-content active" data-property-tabs-target="tabContent" data-tab="overview" style="display: block !important;">
              <h3 class="text-xl font-semibold mb-4">Property Overview</h3>
              <!-- Enhanced Description -->
              <div class="prose max-w-none mb-6">
                <p class="text-gray-700 leading-relaxed text-lg"><%= @property.description %></p>
                <!-- Additional detailed description based on property type -->
                <div class="mt-4 p-4 bg-white rounded-lg border-l-4 border-blue-600">
                  <% case @property.property_type&.downcase
                     when 'house' %>
                    <p class="text-gray-700">This exceptional single-family home features an open-concept design with premium finishes throughout. The gourmet kitchen boasts granite countertops and stainless steel appliances, perfect for entertaining. The master suite includes a walk-in closet and spa-like bathroom. The private backyard offers endless possibilities for outdoor enjoyment.</p>
                  <% when 'apartment' %>
                    <p class="text-gray-700">Experience luxury urban living in this stunning apartment featuring floor-to-ceiling windows that flood the space with natural light. The modern kitchen includes premium appliances and sleek cabinetry. Building amenities include a fitness center, concierge service, and rooftop deck with panoramic city views.</p>
                  <% when 'condo' %>
                    <p class="text-gray-700">This elegant condominium offers the perfect blend of comfort and sophistication. Featuring high-end finishes, spacious layouts, and premium building amenities including pool, fitness center, and 24-hour security. The perfect choice for those seeking maintenance-free living without compromising on luxury.</p>
                  <% when 'townhouse' %>

<!-- Login Page with Property Background -->
<div class="min-h-screen flex items-center justify-center relative"
     style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3') center/cover;">

  <div class="container mx-auto px-4 py-8 flex items-center justify-center">
    <div class="card w-full max-w-lg bg-base-100 shadow-2xl">
      <div class="card-body">
        <!-- Logo Section -->
        <div class="text-center mb-6">
          <%= link_to root_path, class: "flex items-center justify-center gap-3 mb-4" do %>
            <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-white">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 21v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21m0 0h4.5V3.545M12.75 21h7.5V10.75M2.25 21h1.5m18 0h-18M2.25 9l4.5-1.636M18.75 3l-1.5.545m0 6.205l3 1m1.5.5l-1.5-.5M6.75 7.364V3h-3v18m3-13.636l10.5-3.819" />
              </svg>
            </div>
            <span class="text-2xl font-bold text-base-content">PropertyHub</span>
          <% end %>
          <h2 class="text-2xl font-semibold text-base-content mb-2">Welcome Back</h2>
          <p class="text-base-content/70">Sign in to access your property dashboard</p>
        </div>

        <!-- Login Form -->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>

          <!-- Email Field -->
          <div class="form-control">
            <%= f.label :email, class: "label" do %>
              <span class="label-text font-medium">Email Address</span>
            <% end %>
            <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                placeholder: "Enter your email address",
                class: "input input-bordered w-full focus:input-primary" %>
          </div>

          <!-- Password Field -->
          <div class="form-control">
            <%= f.label :password, class: "label" do %>
              <span class="label-text font-medium">Password</span>
            <% end %>
            <%= f.password_field :password,
                autocomplete: "current-password",
                placeholder: "Enter your password",
                class: "input input-bordered w-full focus:input-primary" %>
          </div>

          <!-- Remember Me & Forgot Password -->
          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <div class="form-control">
                <label class="label cursor-pointer">
                  <%= f.check_box :remember_me, class: "checkbox checkbox-primary checkbox-sm mr-2" %>
                  <span class="label-text">Remember me</span>
                </label>
              </div>
            <% end %>

            <% if devise_mapping.recoverable? %>
              <%= link_to "Forgot password?", new_password_path(resource_name),
                  class: "link link-primary text-sm" %>
            <% end %>
          </div>

          <!-- Sign In Button -->
          <div class="form-control mt-6">
            <%= f.submit "Sign In", class: "btn btn-primary w-full text-white font-medium" %>
          </div>
        <% end %>

        <!-- Divider -->
        <div class="divider">or</div>

        <!-- Sign Up Link -->
        <div class="text-center">
          <p class="text-base-content/70">
            Don't have an account?
            <%= link_to "Sign up", new_registration_path(resource_name),
                class: "link link-primary font-medium ml-1" %>
          </p>
        </div>

        <!-- Additional Links -->
        <div class="text-center mt-4 space-y-2">
          <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
            <%= link_to "Didn't receive confirmation instructions?",
                new_confirmation_path(resource_name),
                class: "link link-accent text-sm block" %>
          <% end %>

          <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
            <%= link_to "Didn't receive unlock instructions?",
                new_unlock_path(resource_name),
                class: "link link-accent text-sm block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

    <div class="text-center mb-16">
      <h2 class="text-5xl font-bold text-gray-900 mb-6">Featured Properties</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">Discover our handpicked selection of premium properties, carefully curated for discerning buyers and investors</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% if @featured_properties&.any? %>
        <% @featured_properties.each do |property| %>
          <!-- Houzez-Style Property Card -->
          <div class="group bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border border-gray-100">
            <div class="relative overflow-hidden">
              <% if property.images.any? %>
                <%= image_tag property.images.first,
                    class: "w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300" %>
              <% else %>
                <img src="https://images.unsplash.com/photo-1570129477492-45c003edd2be?w=600&h=400&fit=crop"
                     alt="Property"
                     class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300">
              <% end %>

              <!-- Status Badge -->
              <div class="absolute top-4 left-4 bg-blue-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
                <%= property.listing_type&.humanize || "For Sale" %>
              </div>

              <!-- Featured Badge -->
              <div class="absolute top-4 right-4 bg-yellow-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
                Featured
              </div>

              <!-- Heart Icon -->
              <div class="absolute bottom-4 right-4 w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 cursor-pointer">

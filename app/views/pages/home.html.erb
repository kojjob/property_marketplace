<!-- Houzez-Inspired Hero Section -->
<section class="relative min-h-[700px] flex items-center justify-center" style="background: linear-gradient(135deg, rgba(8, 47, 73, 0.9), rgba(178, 34, 34, 0.8)), url('https://images.unsplash.com/photo-1560472354-b33ff0c44a43?ixlib=rb-4.0.3&w=1920&h=1080&fit=crop') center/cover;">
  <div class="absolute inset-0 bg-gradient-to-r from-blue-900/70 to-blue-800/50"></div>

  <div class="relative z-10 container mx-auto px-4 text-center text-white">
    <!-- Hero Content -->
    <div class="max-w-4xl mx-auto mb-8">
      <h1 class="text-6xl md:text-7xl font-bold mb-6 leading-tight">
        Find Your
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-200 to-blue-100">Perfect</span>
        Home
      </h1>
      <p class="text-xl md:text-2xl text-blue-100 font-light mb-8 leading-relaxed">
        Discover exceptional properties from our curated collection of premium real estate
      </p>
    </div>

    <!-- Enhanced Search Form - Houzez Style -->
    <div class="bg-white rounded-2xl shadow-2xl p-6 md:p-8 max-w-5xl mx-auto">
      <%= form_with url: properties_path, method: :get, local: true, class: "space-y-6" do |f| %>
        <!-- Property Status Tabs -->
        <div class="flex flex-wrap justify-center gap-2 mb-6">
          <button type="button" class="btn btn-primary btn-sm rounded-full px-6 py-2 font-medium tab-active" data-listing-type="all">
            All Properties
          </button>
          <button type="button" class="btn btn-outline btn-sm rounded-full px-6 py-2 font-medium border-gray-300 text-gray-700 hover:bg-blue-50" data-listing-type="sale">
            For Sale
          </button>
          <button type="button" class="btn btn-outline btn-sm rounded-full px-6 py-2 font-medium border-gray-300 text-gray-700 hover:bg-blue-50" data-listing-type="rent">
            For Rent
          </button>
        </div>

        <!-- Main Search Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
          <!-- Location Search -->
          <div class="lg:col-span-2">
            <label class="block text-sm font-semibold text-gray-700 mb-2">Location</label>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <%= f.text_field :location,
                  placeholder: "Enter city, neighborhood, or address",
                  class: "input input-bordered w-full pl-10 py-3 text-gray-700 border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200" %>
            </div>
          </div>

          <!-- Property Type -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Property Type</label>
            <%= f.select :property_type,
                options_for_select([
                  ["All Types", ""],
                  ["House", "house"],
                  ["Apartment", "apartment"],
                  ["Villa", "villa"],
                  ["Condo", "condo"],
                  ["Commercial", "commercial"],
                  ["Land", "land"]
                ]),
                {},
                class: "select select-bordered w-full py-3 text-gray-700 border-gray-200 focus:border-blue-500" %>
          </div>

          <!-- Price Range -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Price Range</label>
            <%= f.select :price_range,
                options_for_select([
                  ["Any Price", ""],
                  ["Under $200K", "0-200000"],
                  ["$200K - $400K", "200000-400000"],
                  ["$400K - $600K", "400000-600000"],
                  ["$600K - $800K", "600000-800000"],
                  ["$800K - $1M", "800000-1000000"],
                  ["$1M - $2M", "1000000-2000000"],
                  ["$2M+", "2000000-"]
                ]),
                {},
                class: "select select-bordered w-full py-3 text-gray-700 border-gray-200 focus:border-blue-500" %>
          </div>

          <!-- Search Button -->
          <div class="flex items-end">
            <%= f.submit "Search Properties",
                class: "btn btn-primary w-full py-3 bg-gradient-to-r from-blue-600 to-blue-700 border-0 text-white font-semibold rounded-lg hover:from-blue-700 hover:to-blue-800 transition-all duration-200 shadow-lg" %>
          </div>
        </div>

        <!-- Advanced Search Toggle -->
        <div class="text-center pt-4">
          <button type="button" class="text-blue-600 hover:text-blue-700 font-medium text-sm flex items-center mx-auto gap-2">
            <span>Advanced Search Options</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>
      <% end %>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mt-12 max-w-4xl mx-auto">
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-blue-100 mb-2">2,847+</div>
        <div class="text-blue-200 text-sm uppercase tracking-wide">Properties Listed</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-blue-100 mb-2">15,892+</div>
        <div class="text-blue-200 text-sm uppercase tracking-wide">Happy Clients</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-blue-100 mb-2">$425K</div>
        <div class="text-blue-200 text-sm uppercase tracking-wide">Average Price</div>
      </div>
      <div class="text-center">
        <div class="text-3xl md:text-4xl font-bold text-blue-100 mb-2">18</div>
        <div class="text-blue-200 text-sm uppercase tracking-wide">Days Average Sale</div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Properties - Houzez Style -->
<section class="py-20 bg-gray-50">

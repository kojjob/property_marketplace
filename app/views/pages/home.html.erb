              </div>
            </div>

            <div class="p-6">
              <!-- Price -->
              <div class="mb-4">
                <span class="text-3xl font-bold text-blue-600">
                  <%= number_to_currency(property.price) %>
                </span>
                <span class="text-gray-500 text-sm ml-2">/ month</span>
              </div>

              <!-- Title -->
              <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2 group-hover:text-blue-600 transition-colors">
                <%= link_to property.title, property_path(property), class: "hover:text-blue-600 transition-colors" %>

<%= form_with model: comment, url: blog_post_comments_path(blog_post), method: :post, local: false, class: "bg-gray-50 rounded-lg p-6" do |f| %>
  <% if comment.errors.any? %>
    <div class="mb-4">
      <ul class="text-red-600 text-sm">
        <% comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-4">
    <%= f.label :content, "Your Comment", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :content, rows: 4, placeholder: "Share your thoughts...",
                    class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>
  <% unless user_signed_in? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <%= f.label :author_name, "Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :author_name, placeholder: "Your name",
                         class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      <div>
        <%= f.label :author_email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :author_email, type: "email", placeholder: "your.email@example.com",
                         class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
    </div>
    <p class="text-sm text-gray-600 mb-4">
      Your email address will not be published. Required fields are marked *
    </p>
  <% end %>
  <%= f.hidden_field :parent_id %>
  <div class="flex justify-end">
    <%= f.submit "Post Comment", class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
  </div>
<% end %>

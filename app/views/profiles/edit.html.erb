          'profile_twitter_url': 'Your Twitter/X professional account.',
          'profile_linkedin_url': 'Your LinkedIn professional profile.',
          'profile_instagram_url': 'Your Instagram business or professional account.'
        };

        Object.entries(tooltips).forEach(([fieldId, tooltipText]) => {
          const field = document.getElementById(fieldId);
          if (field) {
            const tooltipIcon = document.createElement('div');
            tooltipIcon.className = 'absolute right-3 top-1/2 transform -translate-y-1/2 cursor-help text-gray-400 hover:text-emerald-600 transition-colors';
            tooltipIcon.innerHTML = '<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path></svg>';

            const tooltip = document.createElement('div');

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Interactive form enhancements
      initializeFormEnhancements();
      initializeAvatarUpload();
      initializeValidationFeedback();
      initializeProgressIndicator();
      initializeTooltips();

      function initializeFormEnhancements() {
        // Add floating label effect
        const formInputs = document.querySelectorAll('input[type="text"], input[type="email"], input[type="tel"], input[type="url"], textarea, select');

        formInputs.forEach(input => {
          // Add focus effects
          input.addEventListener('focus', function() {
            this.parentElement.classList.add('ring-2', 'ring-emerald-500', 'ring-opacity-50');
            this.classList.add('border-emerald-400');
          });

          input.addEventListener('blur', function() {
            this.parentElement.classList.remove('ring-2', 'ring-emerald-500', 'ring-opacity-50');
            this.classList.remove('border-emerald-400');
            validateField(this);
          });

          // Real-time character count for text areas
          if (input.tagName === 'TEXTAREA') {
            const maxLength = input.getAttribute('maxlength') || 500;
            const counterDiv = document.createElement('div');
            counterDiv.className = 'text-sm text-gray-500 mt-1 text-right';
            counterDiv.innerHTML = `<span class="current">0</span>/<span class="max">${maxLength}</span>`;
            input.parentElement.appendChild(counterDiv);

            input.addEventListener('input', function() {
              const current = this.value.length;
              const counter = counterDiv.querySelector('.current');
              counter.textContent = current;

              if (current > maxLength * 0.9) {
                counter.classList.add('text-amber-600');
              } else {
                counter.classList.remove('text-amber-600');
              }
            });
          }
        });
      }

      function initializeValidationFeedback() {
        const requiredFields = document.querySelectorAll('[required]');

        requiredFields.forEach(field => {
          const feedbackDiv = document.createElement('div');
          feedbackDiv.className = 'validation-feedback mt-1 text-sm hidden';
          field.parentElement.appendChild(feedbackDiv);
        });
      }

      function validateField(field) {
        const feedbackDiv = field.parentElement.querySelector('.validation-feedback');
        if (!feedbackDiv) return;

        let isValid = true;
        let message = '';

        // Required field validation
        if (field.hasAttribute('required') && !field.value.trim()) {
          isValid = false;
          message = `${getFieldLabel(field)} is required`;
        }

        // Email validation
        if (field.type === 'email' && field.value && !isValidEmail(field.value)) {
          isValid = false;
          message = 'Please enter a valid email address';
        }

        // Phone validation
        if (field.type === 'tel' && field.value && !isValidPhone(field.value)) {
          isValid = false;
          message = 'Please enter a valid phone number';
        }

        // URL validation
        if (field.type === 'url' && field.value && !isValidURL(field.value)) {
          isValid = false;
          message = 'Please enter a valid URL';
        }

        // Update visual feedback
        if (isValid) {
          field.classList.remove('border-red-400');
          field.classList.add('border-green-400');
          feedbackDiv.className = 'validation-feedback mt-1 text-sm text-green-600';
          feedbackDiv.innerHTML = '<svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>Valid';
          feedbackDiv.classList.remove('hidden');
        } else if (message) {
          field.classList.remove('border-green-400');
          field.classList.add('border-red-400');
          feedbackDiv.className = 'validation-feedback mt-1 text-sm text-red-600';
          feedbackDiv.innerHTML = `<svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>${message}`;
          feedbackDiv.classList.remove('hidden');
        } else {
          field.classList.remove('border-red-400', 'border-green-400');
          feedbackDiv.classList.add('hidden');
        }
      }

      function initializeProgressIndicator() {
        const form = document.querySelector('form');
        const progressBar = document.createElement('div');
        progressBar.className = 'fixed top-0 left-0 w-full h-1 bg-gradient-to-r from-emerald-500 to-teal-600 transform scale-x-0 origin-left transition-transform duration-300 z-50';
        document.body.appendChild(progressBar);

        function updateProgress() {
          const totalFields = form.querySelectorAll('input[required], textarea[required], select[required]').length;
          const completedFields = Array.from(form.querySelectorAll('input[required], textarea[required], select[required]')).filter(field => field.value.trim()).length;
          const progress = totalFields > 0 ? completedFields / totalFields : 0;

          progressBar.style.transform = `scaleX(${progress})`;

          if (progress === 1) {
            progressBar.classList.add('bg-gradient-to-r', 'from-green-500', 'to-emerald-600');
          }
        }

        // Update progress on input
        form.addEventListener('input', updateProgress);
        updateProgress();
      }


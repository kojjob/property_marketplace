<% content_for :title, "#{@profile.display_name} - Agent Profile" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header Banner with Parallax Effect -->
  <div class="relative bg-gradient-to-r from-blue-600 via-blue-700 to-indigo-800 h-80 overflow-hidden">
    <!-- Animated Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-40 h-40 bg-white rounded-full -translate-x-20 -translate-y-20 animate-pulse"></div>
      <div class="absolute top-20 right-0 w-60 h-60 bg-white rounded-full translate-x-30 -translate-y-30 animate-pulse delay-300"></div>
      <div class="absolute bottom-0 left-1/3 w-80 h-80 bg-white rounded-full translate-y-40 animate-pulse delay-700"></div>
    </div>
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="relative container mx-auto px-4 h-full flex items-end pb-8">
      <div class="flex items-end space-x-6">
        <!-- Enhanced Profile Avatar -->
        <div class="relative group">
          <div class="w-40 h-40 bg-white rounded-full p-3 shadow-2xl ring-4 ring-white/20 backdrop-blur-sm">
            <% if @profile.avatar.present? %>
              <%= image_tag @profile.avatar, alt: @profile.display_name,
                  class: "w-full h-full rounded-full object-cover transition-transform duration-300 group-hover:scale-105" %>
            <% else %>
              <div class="w-full h-full rounded-full bg-gradient-to-br from-blue-400 via-blue-500 to-blue-600 flex items-center justify-center shadow-inner">
                <span class="text-white text-4xl font-bold tracking-wide">
                  <%= @profile.first_name&.first&.upcase || @profile.user.email.first.upcase %>
                </span>
              </div>
            <% end %>
          </div>

          <!-- Enhanced Verification Badge -->
          <% if @profile.verified? %>
            <div class="absolute -bottom-3 -right-3 bg-gradient-to-br from-green-400 to-green-600 rounded-full p-3 shadow-xl ring-4 ring-white/50 animate-pulse">
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
            </div>
          <% end %>

          <!-- Online Status Indicator (Optional) -->
          <div class="absolute bottom-2 right-8 w-6 h-6 bg-green-400 rounded-full border-4 border-white shadow-md">
            <div class="w-full h-full bg-green-500 rounded-full animate-ping"></div>
          </div>
        </div>

        <!-- Enhanced Profile Info -->
        <div class="text-white pb-4 flex-1">
          <div class="mb-3">
            <h1 class="text-4xl font-bold mb-2 bg-gradient-to-r from-white to-blue-100 bg-clip-text text-transparent">
              <%= @profile.display_name %>
            </h1>
            <% if @profile.position.present? %>
              <p class="text-xl text-blue-100 font-medium"><%= @profile.position %></p>
            <% end %>
          </div>

          <div class="flex flex-wrap items-center gap-4 text-blue-100 mb-4">
            <% if @profile.role.present? %>
              <span class="flex items-center bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-medium border border-white/30">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                </svg>
                <%= @profile.role.humanize %>
              </span>
            <% end %>

            <% if @profile.company_name.present? %>
              <span class="flex items-center bg-white/10 backdrop-blur-sm px-3 py-2 rounded-lg text-sm">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm3 1h6v4H7V5zm8 8v2a1 1 0 01-1 1H6a1 1 0 01-1-1v-2h10z" clip-rule="evenodd"></path>
                </svg>
                <%= @profile.company_name %>
              </span>
            <% end %>

            <% if @profile.years_experience.present? %>
              <span class="flex items-center bg-white/10 backdrop-blur-sm px-3 py-2 rounded-lg text-sm">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                </svg>
                <%= pluralize(@profile.years_experience, 'year') %> experience
              </span>
            <% end %>
          </div>

          <!-- Quick Stats -->
          <div class="flex items-center space-x-6 text-sm">
            <div class="flex items-center text-blue-200">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
              </svg>
              <span><%= @total_properties %> Properties</span>
            </div>
            <div class="flex items-center text-blue-200">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
              <span><%= @average_rating > 0 ? number_with_precision(@average_rating, precision: 1) : "New" %> Rating</span>
            </div>
            <div class="flex items-center text-blue-200">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"></path>
              </svg>
              <span><%= @reviews.count %> Reviews</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Edit Button (only for profile owner) -->
      <% if current_user == @profile.user %>
        <div class="ml-auto pb-4">
          <%= link_to edit_profile_path(@profile),
              class: "bg-white text-blue-600 px-6 py-2 rounded-lg font-semibold hover:bg-blue-50 transition-colors duration-200 flex items-center space-x-2" do %>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
            </svg>
            <span>Edit Profile</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container mx-auto px-4 -mt-16 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

      <!-- Left Column - Profile Details -->
      <div class="lg:col-span-2 space-y-6">

        <!-- About Section -->
        <div class="bg-white rounded-xl shadow-lg p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">About <%= @profile.first_name %></h2>
          <% if @profile.bio.present? %>
            <p class="text-gray-600 leading-relaxed"><%= simple_format(@profile.bio) %></p>
          <% else %>
            <p class="text-gray-400 italic">No bio available.</p>
          <% end %>
        </div>

        <!-- Enhanced Statistics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Properties Card -->
          <div class="group bg-white rounded-2xl shadow-xl p-6 text-center hover:shadow-2xl transition-all duration-300 border border-gray-100 hover:border-blue-200">
            <div class="mb-4">
              <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto group-hover:scale-110 transition-transform duration-300">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
                </svg>
              </div>
            </div>
            <div class="text-4xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors duration-300">
              <%= @total_properties %>
            </div>
            <div class="text-gray-600 font-medium">Properties Listed</div>
            <div class="mt-3 text-sm text-gray-500">Active Listings</div>
          </div>

          <!-- Rating Card -->
          <div class="group bg-white rounded-2xl shadow-xl p-6 text-center hover:shadow-2xl transition-all duration-300 border border-gray-100 hover:border-green-200">
            <div class="mb-4">
              <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto group-hover:scale-110 transition-transform duration-300">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              </div>
            </div>
            <div class="text-4xl font-bold text-gray-900 mb-2 group-hover:text-green-600 transition-colors duration-300">
              <%= @average_rating > 0 ? number_with_precision(@average_rating, precision: 1) : "New" %>
            </div>
            <div class="text-gray-600 font-medium">Average Rating</div>
            <% if @average_rating > 0 %>
              <div class="flex justify-center mt-2">
                <% 5.times do |i| %>
                  <svg class="w-4 h-4 <%= i < @average_rating.round ? 'text-yellow-400' : 'text-gray-300' %>" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                <% end %>
              </div>
            <% else %>
              <div class="mt-3 text-sm text-gray-500">No ratings yet</div>
            <% end %>
          </div>

          <!-- Reviews Card -->
          <div class="group bg-white rounded-2xl shadow-xl p-6 text-center hover:shadow-2xl transition-all duration-300 border border-gray-100 hover:border-purple-200">
            <div class="mb-4">
              <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto group-hover:scale-110 transition-transform duration-300">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"></path>
                </svg>
              </div>
            </div>
            <div class="text-4xl font-bold text-gray-900 mb-2 group-hover:text-purple-600 transition-colors duration-300">
              <%= @reviews.count %>
            </div>
            <div class="text-gray-600 font-medium">Client Reviews</div>
            <div class="mt-3 text-sm text-gray-500">Total Feedback</div>
          </div>
        </div>

        <!-- Properties Section -->
        <% if @user_properties.any? %>
          <div class="bg-white rounded-xl shadow-lg p-6">
            <div class="flex justify-between items-center mb-6">
              <h3 class="text-xl font-bold text-gray-900">Recent Properties</h3>
              <% if @total_properties > 6 %>
                <%= link_to "View All (#{@total_properties})", properties_path(agent: @profile.id),
                    class: "text-blue-600 hover:text-blue-800 font-medium" %>
              <% end %>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              <% @user_properties.each do |property| %>
                <div class="group cursor-pointer">
                  <%= link_to property_path(property), class: "block" do %>
                    <div class="bg-gray-100 rounded-lg overflow-hidden mb-3">
                      <% if property.images.any? %>
                        <%= image_tag property.images.first,
                            alt: property.title,
                            class: "w-full h-32 object-cover group-hover:scale-105 transition-transform duration-300" %>
                      <% else %>
                        <div class="w-full h-32 bg-gradient-to-br from-gray-300 to-gray-400 flex items-center justify-center">
                          <svg class="w-8 h-8 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                          </svg>
                        </div>
                      <% end %>
                    </div>
                    <h4 class="font-semibold text-gray-900 mb-1 group-hover:text-blue-600 transition-colors">
                      <%= property.title %>
                    </h4>
                    <p class="text-gray-600 text-sm mb-1"><%= property.location %></p>
                    <p class="text-blue-600 font-bold">
                      <%= number_to_currency(property.price, precision: 0) %>
                      <% if property.price_period.present? %>
                        <span class="text-gray-500 font-normal">/ <%= property.price_period %></span>
                      <% end %>
                    </p>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Reviews Section -->
        <% if @reviews.any? %>
          <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Client Reviews</h3>

            <div class="space-y-4">
              <% @reviews.each do |review| %>
                <div class="border-b border-gray-200 pb-4 last:border-b-0">
                  <div class="flex items-start space-x-4">
                    <div class="flex-shrink-0">
                      <% if review.reviewer&.profile&.avatar.present? %>
                        <%= image_tag review.reviewer.profile.avatar,
                            alt: review.reviewer.profile.display_name,
                            class: "w-10 h-10 rounded-full object-cover" %>
                      <% else %>
                        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
                          <span class="text-white text-sm font-bold">
                            <%= review.reviewer&.email&.first&.upcase || "A" %>
                          </span>
                        </div>
                      <% end %>
                    </div>
                    <div class="flex-1">
                      <div class="flex items-center justify-between">
                        <h4 class="font-semibold text-gray-900">
                          <%= review.reviewer&.profile&.display_name || "Anonymous" %>
                        </h4>
                        <div class="flex items-center">
                          <% 5.times do |i| %>
                            <svg class="w-4 h-4 <%= i < review.rating ? 'text-yellow-400' : 'text-gray-300' %>"
                                 fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                            </svg>
                          <% end %>
                        </div>
                      </div>
                      <p class="text-gray-600 mt-2"><%= review.comment %></p>
                      <p class="text-gray-400 text-sm mt-1"><%= time_ago_in_words(review.created_at) %> ago</p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Right Column - Contact Info -->
      <div class="space-y-6">

        <!-- Enhanced Contact Card -->
        <div class="bg-white rounded-2xl shadow-xl p-6 border border-gray-100 sticky top-8">
          <div class="text-center mb-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Get In Touch</h3>
            <p class="text-gray-600 text-sm">Ready to help with your property needs</p>
          </div>

          <!-- Contact Actions -->
          <div class="space-y-4 mb-6">
            <% if @profile.phone_number.present? %>
              <a href="tel:<%= @profile.phone_number %>"
                 class="group w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white py-4 px-6 rounded-xl font-semibold hover:from-blue-700 hover:to-blue-800 transition-all duration-300 flex items-center justify-center space-x-3 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                <div class="w-8 h-8 bg-white/20 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                  </svg>
                </div>
                <div class="text-left">
                  <div class="font-semibold">Call Now</div>
                  <div class="text-blue-100 text-sm"><%= @profile.phone_number %></div>
                </div>
              </a>
            <% end %>

            <a href="mailto:<%= @profile.user.email %>"
               class="group w-full bg-gray-50 text-gray-700 py-4 px-6 rounded-xl font-semibold hover:bg-gray-100 transition-all duration-300 flex items-center justify-center space-x-3 border border-gray-200 hover:border-gray-300 transform hover:-translate-y-0.5">
              <div class="w-8 h-8 bg-gray-200 rounded-lg flex items-center justify-center group-hover:bg-gray-300 transition-colors duration-300">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                </svg>
              </div>
              <div class="text-left">
                <div class="font-semibold">Send Email</div>
                <div class="text-gray-500 text-sm">Quick Response</div>
              </div>
            </a>

            <!-- WhatsApp Button (if phone available) -->
            <% if @profile.phone_number.present? %>
              <a href="https://wa.me/<%= @profile.phone_number.gsub(/[^0-9]/, '') %>"
                 target="_blank"
                 class="group w-full bg-green-500 text-white py-4 px-6 rounded-xl font-semibold hover:bg-green-600 transition-all duration-300 flex items-center justify-center space-x-3 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                <div class="w-8 h-8 bg-white/20 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.262.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
                  </svg>
                </div>
                <div class="text-left">
                  <div class="font-semibold">WhatsApp</div>
                  <div class="text-green-100 text-sm">Instant Message</div>
                </div>
              </a>
            <% end %>
          </div>

          <!-- Contact Details -->
          <div class="border-t border-gray-100 pt-6">
            <h4 class="font-semibold text-gray-900 mb-4">Contact Details</h4>
            <div class="space-y-4">
              <% if @profile.phone_number.present? %>
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                    <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm text-gray-500">Phone</div>
                    <div class="font-medium text-gray-900"><%= @profile.phone_number %></div>
                  </div>
                </div>
              <% end %>

              <div class="flex items-center space-x-3">
                <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                  </svg>
                </div>
                <div>
                  <div class="text-sm text-gray-500">Email</div>
                  <div class="font-medium text-gray-900 text-sm"><%= @profile.user.email %></div>
                </div>
              </div>

              <% if @profile.website.present? %>
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-indigo-100 rounded-lg flex items-center justify-center">
                    <svg class="w-4 h-4 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4.083 9h1.946c.089-1.546.383-2.97.837-4.118A6.004 6.004 0 004.083 9zM10 2a8 8 0 100 16 8 8 0 000-16zm0 2c-.076 0-.232.032-.465.262-.238.234-.497.623-.737 1.182-.389.907-.673 2.142-.766 3.556h3.936c-.093-1.414-.377-2.649-.766-3.556-.24-.559-.499-.948-.737-1.182C10.232 4.032 10.076 4 10 4zm3.971 5c-.089-1.546-.383-2.97-.837-4.118A6.004 6.004 0 0115.917 9h-1.946zm-2.003 2H8.032c.093 1.414.377 2.649.766 3.556.24.559.499.948.737 1.182.233.23.389.262.465.262.076 0 .232-.032.465-.262.238-.234.497-.623.737-1.182.389-.907.673-2.142.766-3.556zm1.166 4.118c.454-1.147.748-2.572.837-4.118h1.946a6.004 6.004 0 01-2.783 4.118zm-6.268 0C6.412 13.97 6.118 12.546 6.03 11H4.083a6.004 6.004 0 002.783 4.118z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm text-gray-500">Website</div>
                    <% if safe_url(@profile.website) %>
                      <%= link_to @profile.website, safe_url(@profile.website), target: "_blank",
                          class: "font-medium text-indigo-600 hover:text-indigo-800 text-sm" %>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <% if @profile.address.present? %>
                <div class="flex items-start space-x-3">
                  <div class="w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center mt-0.5">
                    <svg class="w-4 h-4 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm text-gray-500">Location</div>
                    <div class="font-medium text-gray-900 text-sm">
                      <%= @profile.address %>
                      <% if @profile.city.present? || @profile.state.present? %>
                        <br><%= [@profile.city, @profile.state, @profile.country].compact.join(", ") %>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Social Media Links -->
        <% if [@profile.facebook_url, @profile.twitter_url, @profile.linkedin_url, @profile.instagram_url].any?(&:present?) %>
          <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Social Media</h3>

            <div class="flex space-x-3">
              <% if @profile.facebook_url.present? && safe_url(@profile.facebook_url) %>
                <%= link_to safe_url(@profile.facebook_url), target: "_blank",
                    class: "p-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                <% end %>
              <% end %>

              <% if @profile.twitter_url.present? && safe_url(@profile.twitter_url) %>
                <%= link_to safe_url(@profile.twitter_url), target: "_blank",
                    class: "p-3 bg-sky-500 text-white rounded-lg hover:bg-sky-600 transition-colors duration-200" do %>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                <% end %>
              <% end %>

              <% if @profile.linkedin_url.present? && safe_url(@profile.linkedin_url) %>
                <%= link_to safe_url(@profile.linkedin_url), target: "_blank",
                    class: "p-3 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition-colors duration-200" do %>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                <% end %>
              <% end %>

              <% if @profile.instagram_url.present? && safe_url(@profile.instagram_url) %>
                <%= link_to safe_url(@profile.instagram_url), target: "_blank",
                    class: "p-3 bg-gradient-to-tr from-purple-500 to-pink-500 text-white rounded-lg hover:from-purple-600 hover:to-pink-600 transition-all duration-200" do %>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.618 5.367 11.986 11.988 11.986 6.618 0 11.986-5.368 11.986-11.986C24.003 5.367 18.635.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.596-3.205-1.525l1.431-1.431c.464.642 1.216 1.06 2.067 1.06 1.404 0 2.544-1.14 2.544-2.544 0-.851-.418-1.603-1.06-2.067l1.431-1.431c.929.757 1.525 1.908 1.525 3.205 0 2.271-1.844 4.115-4.115 4.115l-.618.618zm7.425-7.425l-.618-.618c2.271 0 4.115-1.844 4.115-4.115 0-1.297-.596-2.448-1.525-3.205l-1.431 1.431c.642.464 1.06 1.216 1.06 2.067 0 1.404-1.14 2.544-2.544 2.544-.851 0-1.603-.418-2.067-1.06l-1.431 1.431c.757.929 1.908 1.525 3.205 1.525z"/>
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Languages -->
        <% if @profile.languages.present? %>
          <div class="bg-white rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Languages</h3>
            <div class="flex flex-wrap gap-2">
              <% @profile.languages.split(',').each do |language| %>
                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">
                  <%= language.strip %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
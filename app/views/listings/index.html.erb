<% content_for :title, "Property Listings" %>

<div class="container-fluid py-4">
  <div class="row">
    <!-- Filters Sidebar -->
    <div class="col-lg-3">
      <div class="card">
        <div class="card-header">
          <h5>Filter Results</h5>
        </div>
        <div class="card-body">
          <%= form_with url: listings_path, method: :get, local: true, class: "needs-validation", novalidate: true do |form| %>
            <div class="mb-3">
              <%= form.label :location, class: "form-label" %>
              <%= form.text_field :location, value: params[:location], placeholder: "Enter city or country", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :listing_type, class: "form-label" %>
              <%= form.select :listing_type,
                  options_for_select([
                    ['All Types', ''],
                    ['Rent', 'rent'],
                    ['Sale', 'sale'],
                    ['Short Term', 'short_term'],
                    ['Subscription', 'subscription']
                  ], params[:listing_type]),
                  {}, { class: "form-select" } %>
            </div>

            <div class="row">
              <div class="col-6">
                <div class="mb-3">
                  <%= form.label :min_price, "Min Price", class: "form-label" %>
                  <%= form.number_field :min_price, value: params[:min_price], placeholder: "0", class: "form-control" %>
                </div>
              </div>
              <div class="col-6">
                <div class="mb-3">
                  <%= form.label :max_price, "Max Price", class: "form-label" %>
                  <%= form.number_field :max_price, value: params[:max_price], placeholder: "Any", class: "form-control" %>
                </div>
              </div>
            </div>

            <%= form.submit "Search", class: "btn btn-primary w-100" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Results -->
    <div class="col-lg-9">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Property Listings</h1>
        <% if user_signed_in? %>
          <%= link_to "Create Listing", new_listing_path, class: "btn btn-success" %>
        <% end %>
      </div>

      <% if params[:location].present? || params[:listing_type].present? || params[:min_price].present? || params[:max_price].present? %>
        <div class="alert alert-info">
          <div class="d-flex justify-content-between align-items-center">
            <span>
              Showing results
              <% if params[:location].present? %>
                in <%= params[:location] %>
              <% end %>
              <% if params[:listing_type].present? %>
                for <%= params[:listing_type].humanize.downcase %> listings
              <% end %>
              <% if params[:min_price].present? || params[:max_price].present? %>
                with price range $<%= params[:min_price] || 0 %> - $<%= params[:max_price] || '∞' %>
              <% end %>
            </span>
            <%= link_to "Clear filters", listings_path, class: "btn btn-sm btn-outline-secondary" %>
          </div>
        </div>
      <% end %>

      <% if @listings.any? %>
        <div class="row">
          <% @listings.each do |listing| %>
            <div class="col-md-6 col-xl-4 mb-4">
              <div class="card h-100">
                <% if listing.property.images.attached? %>
                  <%= image_tag listing.property.images.first, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
                <% else %>
                  <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                    <i class="fas fa-home fa-3x text-muted"></i>
                  </div>
                <% end %>

                <div class="card-body d-flex flex-column">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <h5 class="card-title mb-0"><%= listing.title %></h5>
                    <span class="badge bg-<%= listing_type_badge_color(listing.listing_type) %>">
                      <%= listing.listing_type.humanize %>
                    </span>
                  </div>

                  <p class="text-muted small mb-2">
                    <i class="fas fa-map-marker-alt"></i>
                    <%= [listing.property.city, listing.property.country].compact.join(', ') %>
                  </p>

                  <p class="card-text flex-grow-1">
                    <%= truncate(listing.description, length: 100) %>
                  </p>

                  <div class="mt-auto">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                      <div>
                        <h5 class="text-primary mb-0">
                          $<%= number_with_delimiter(listing.price) %>
                          <small class="text-muted">/<%= price_period(listing) %></small>
                        </h5>
                      </div>
                      <div class="text-end">
                        <small class="text-muted">
                          <%= listing.property.bedrooms %>br • <%= listing.property.bathrooms %>ba
                        </small>
                      </div>
                    </div>

                    <%= link_to "View Details", listing_path(listing), class: "btn btn-primary w-100" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-search fa-3x text-muted mb-3"></i>
          <h4>No listings found</h4>
          <p class="text-muted">Try adjusting your search criteria or <%= link_to "browse all listings", listings_path %>.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% content_for :title, @listing.title %>

<!-- Modern Property Detail Page -->
<div class="bg-gray-50 min-h-screen">
  <!-- Breadcrumb Navigation -->
  <div class="bg-white border-b">
    <div class="container mx-auto px-4 py-4">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <%= link_to root_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600" do %>
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
              </svg>
              Home
            <% end %>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <%= link_to "Listings", listings_path, class: "ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2" %>
            </div>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 truncate"><%= @listing.title %></span>
            </div>
          </li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Image Gallery -->
        <% if @listing.property.images.attached? %>
          <div class="relative mb-8 rounded-2xl overflow-hidden shadow-lg bg-white" data-controller="carousel" data-carousel-auto-play-value="false">
            <div class="aspect-w-16 aspect-h-9">
              <div class="carousel-inner h-96 relative">
                <% @listing.property.images.each_with_index do |image, index| %>
                  <div class="absolute inset-0 transition-opacity duration-500 <%= index == 0 ? 'opacity-100' : 'opacity-0' %>" data-carousel-target="slide">
                    <%= image_tag image, class: "w-full h-full object-cover" %>
                  </div>
                <% end %>
              </div>
              <% if @listing.property.images.count > 1 %>
                <!-- Navigation Controls -->
                <button class="absolute top-1/2 left-4 transform -translate-y-1/2 bg-black bg-opacity-50 hover:bg-opacity-75 text-white p-3 rounded-full transition-all duration-200" data-action="click->carousel#prev">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                  </svg>
                </button>
                <button class="absolute top-1/2 right-4 transform -translate-y-1/2 bg-black bg-opacity-50 hover:bg-opacity-75 text-white p-3 rounded-full transition-all duration-200" data-action="click->carousel#next">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </button>

                <!-- Dots Indicator -->
                <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2">
                  <% @listing.property.images.each_with_index do |image, index| %>
                    <button class="w-3 h-3 rounded-full bg-white <%= index == 0 ? 'bg-opacity-100' : 'bg-opacity-50' %> transition-all duration-200" data-action="click->carousel#goTo" data-carousel-index="<%= index %>" data-carousel-target="indicator"></button>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% else %>
          <div class="bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl flex items-center justify-center mb-8 h-96 shadow-lg">
            <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
        <% end %>

        <!-- Property Header -->
        <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
          <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-6">
            <div class="flex-1">
              <h1 class="text-3xl font-bold text-gray-900 mb-3"><%= @listing.title %></h1>
              <div class="flex items-center text-gray-600 mb-4">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <%= [@listing.property.address, @listing.property.city, @listing.property.country].compact.join(', ') %>
              </div>
            </div>
            <div class="flex flex-col items-start md:items-end">
              <span class="px-4 py-2 bg-<%= listing_type_badge_color(@listing.listing_type) == 'success' ? 'green' : listing_type_badge_color(@listing.listing_type) == 'primary' ? 'blue' : listing_type_badge_color(@listing.listing_type) == 'warning' ? 'yellow' : 'indigo' %>-500 text-white text-sm font-medium rounded-full mb-3">
                <%= @listing.listing_type.humanize %>
              </span>
              <div class="text-right">
                <div class="text-3xl font-bold text-blue-600">
                  <%= format_listing_price(@listing) %>
                </div>
              </div>
            </div>
          </div>

          <!-- Property Stats -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
            <div class="text-center p-4 bg-gray-50 rounded-xl">
              <svg class="w-8 h-8 text-blue-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
              </svg>
              <div class="text-xl font-bold text-gray-900"><%= @listing.property.bedrooms %></div>
              <div class="text-sm text-gray-500">Bedrooms</div>
            </div>
            <div class="text-center p-4 bg-gray-50 rounded-xl">
              <svg class="w-8 h-8 text-blue-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path>
              </svg>
              <div class="text-xl font-bold text-gray-900"><%= @listing.property.bathrooms %></div>
              <div class="text-sm text-gray-500">Bathrooms</div>
            </div>
            <div class="text-center p-4 bg-gray-50 rounded-xl">
              <svg class="w-8 h-8 text-blue-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
              </svg>
              <div class="text-xl font-bold text-gray-900"><%= number_with_delimiter(@listing.property.square_feet) %></div>
              <div class="text-sm text-gray-500">sq ft</div>
            </div>
            <div class="text-center p-4 bg-gray-50 rounded-xl">
              <svg class="w-8 h-8 text-blue-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <div class="text-xl font-bold text-gray-900"><%= @listing.property.year_built %></div>
              <div class="text-sm text-gray-500">Built</div>
            </div>
          </div>
        </div>

        <!-- Description -->
        <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Description</h2>
          <div class="text-gray-700 leading-relaxed">
            <%= simple_format(@listing.description) %>
          </div>
        </div>

        <!-- Amenities -->
        <% if @listing.amenities.any? %>
          <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Amenities</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <% @listing.amenities.each do |amenity| %>
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700"><%= amenity.name %></span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Property Details -->
        <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Property Details</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4">General Information</h3>
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span class="text-gray-600">Property Type:</span>
                  <span class="font-medium"><%= @listing.property.property_type.humanize %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Furnished:</span>
                  <span class="font-medium"><%= @listing.furnished? ? 'Yes' : 'No' %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Pets Allowed:</span>
                  <span class="font-medium"><%= @listing.pets_allowed? ? 'Yes' : 'No' %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Utilities Included:</span>
                  <span class="font-medium"><%= @listing.utilities_included? ? 'Yes' : 'No' %></span>
                </div>
                <% if @listing.security_deposit.present? %>
                  <div class="flex justify-between">
                    <span class="text-gray-600">Security Deposit:</span>
                    <span class="font-medium">$<%= number_with_delimiter(@listing.security_deposit) %></span>
                  </div>
                <% end %>
              </div>
            </div>
            <% if @listing.rental_listing? %>
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Lease Terms</h3>
                <div class="space-y-3">
                  <div class="flex justify-between">
                    <span class="text-gray-600">Lease Duration:</span>
                    <span class="font-medium"><%= @listing.lease_duration %> <%= @listing.lease_duration_unit.humanize %></span>
                  </div>
                  <% if @listing.minimum_stay %>
                    <div class="flex justify-between">
                      <span class="text-gray-600">Minimum Stay:</span>
                      <span class="font-medium"><%= @listing.minimum_stay %> days</span>
                    </div>
                  <% end %>
                  <% if @listing.maximum_stay %>
                    <div class="flex justify-between">
                      <span class="text-gray-600">Maximum Stay:</span>
                      <span class="font-medium"><%= @listing.maximum_stay %> days</span>
                    </div>
                  <% end %>
                  <% if @listing.available_from %>
                    <div class="flex justify-between">
                      <span class="text-gray-600">Available From:</span>
                      <span class="font-medium"><%= @listing.available_from.strftime('%B %d, %Y') %></span>
                    </div>
                  <% end %>
                  <% if @listing.available_until %>
                    <div class="flex justify-between">
                      <span class="text-gray-600">Available Until:</span>
                      <span class="font-medium"><%= @listing.available_until.strftime('%B %d, %Y') %></span>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Similar Properties -->
        <% if @related_listings.any? %>
          <div class="bg-white rounded-2xl shadow-lg p-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Similar Properties</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              <% @related_listings.each do |listing| %>
                <div class="group">
                  <div class="bg-gray-50 rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
                    <% if listing.property.images.attached? %>
                      <%= image_tag listing.property.images.first, class: "w-full h-40 object-cover group-hover:scale-105 transition-transform duration-300" %>
                    <% else %>
                      <div class="w-full h-40 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                      </div>
                    <% end %>
                    <div class="p-4">
                      <h3 class="font-semibold text-gray-900 mb-2 line-clamp-2"><%= listing.title %></h3>
                      <div class="text-xl font-bold text-blue-600 mb-3">
                        <%= format_listing_price(listing) %>
                      </div>
                      <%= link_to "View Details", listing_path(listing), class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg font-medium transition-colors duration-200 text-center block" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <div class="sticky top-8">
          <div class="bg-white rounded-2xl shadow-lg p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Contact Owner</h3>

            <!-- Owner Profile -->
            <div class="text-center mb-6">
              <% if @listing.user.avatar.attached? %>
                <%= image_tag @listing.user.avatar, class: "w-20 h-20 rounded-full mx-auto mb-3 object-cover" %>
              <% else %>
                <div class="w-20 h-20 bg-blue-600 rounded-full mx-auto mb-3 flex items-center justify-center">
                  <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
              <% end %>
              <h4 class="font-semibold text-gray-900"><%= @listing.user.profile&.display_name || @listing.user.email %></h4>
              <p class="text-sm text-gray-500">Property Owner</p>
            </div>

            <!-- Action Buttons -->
            <% if user_signed_in? && current_user != @listing.user %>
              <div class="space-y-3">
                <% if @listing.listing_type == 'rent' || @listing.listing_type == 'short_term' %>
                  <%= link_to "Book Now", new_listing_booking_path(@listing), class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-3 px-4 rounded-lg font-semibold transition-colors duration-200 text-center block" %>
                <% end %>
                <button class="w-full bg-white hover:bg-gray-50 text-blue-600 border-2 border-blue-600 py-3 px-4 rounded-lg font-semibold transition-colors duration-200" onclick="document.getElementById('contactModal').classList.remove('hidden')">
                  <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  Send Message
                </button>
                <button class="w-full bg-white hover:bg-gray-50 text-gray-700 border-2 border-gray-300 py-3 px-4 rounded-lg font-semibold transition-colors duration-200">
                  <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                  Call Owner
                </button>
              </div>
            <% else %>
              <% if user_signed_in? && current_user == @listing.user %>
                <div class="space-y-3">
                  <%= link_to "Edit Listing", edit_listing_path(@listing), class: "w-full bg-blue-600 hover:bg-blue-700 text-white py-3 px-4 rounded-lg font-semibold transition-colors duration-200 text-center block" %>
                  <%= link_to "View Bookings", listing_bookings_path(@listing), class: "w-full bg-white hover:bg-gray-50 text-blue-600 border-2 border-blue-600 py-3 px-4 rounded-lg font-semibold transition-colors duration-200 text-center block" %>
                  <%= link_to "Delete", listing_path(@listing), method: :delete,
                      class: "w-full bg-white hover:bg-red-50 text-red-600 border-2 border-red-600 py-3 px-4 rounded-lg font-semibold transition-colors duration-200 text-center block",
                      confirm: "Are you sure you want to delete this listing?" %>
                </div>
              <% else %>
                <div class="text-center">
                  <p class="text-gray-600 mb-4">Sign in to contact the owner</p>
                  <%= link_to "Sign In", new_user_session_path, class: "bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg font-medium transition-colors duration-200" %>
                </div>
              <% end %>
            <% end %>

            <hr class="my-6">

            <div class="text-center">
              <p class="text-sm text-gray-500">
                Listed <%= time_ago_in_words(@listing.created_at) %> ago
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Contact Modal -->
<div id="contactModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50">
  <div class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:p-0">
    <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
      <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-medium text-gray-900">Contact Property Owner</h3>
          <button type="button" onclick="document.getElementById('contactModal').classList.add('hidden')" class="text-gray-400 hover:text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <%= form_with url: "#", local: true do |form| %>
          <div class="mb-4">
            <%= form.label :subject, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :subject, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", value: "Inquiry about: #{@listing.title}" %>
          </div>
          <div class="mb-4">
            <%= form.label :message, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :message, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", rows: 5, placeholder: "Hi, I'm interested in this property..." %>
          </div>
        <% end %>
      </div>
      <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
        <button type="button" class="w-full inline-flex justify-center rounded-lg border border-transparent shadow-sm px-4 py-2 bg-blue-600 text-base font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:ml-3 sm:w-auto sm:text-sm">
          Send Message
        </button>
        <button type="button" onclick="document.getElementById('contactModal').classList.add('hidden')" class="mt-3 w-full inline-flex justify-center rounded-lg border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>
<% content_for :title, @listing.title %>

<div class="container-fluid py-4">
  <div class="row">
    <div class="col-lg-8">
      <!-- Image Gallery -->
      <% if @listing.property.images.attached? %>
        <div id="propertyCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
          <div class="carousel-inner rounded">
            <% @listing.property.images.each_with_index do |image, index| %>
              <div class="carousel-item <%= 'active' if index == 0 %>">
                <%= image_tag image, class: "d-block w-100", style: "height: 400px; object-fit: cover;" %>
              </div>
            <% end %>
          </div>
          <% if @listing.property.images.count > 1 %>
            <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          <% end %>
        </div>
      <% else %>
        <div class="bg-light rounded d-flex align-items-center justify-content-center mb-4" style="height: 400px;">
          <i class="fas fa-home fa-5x text-muted"></i>
        </div>
      <% end %>

      <!-- Property Details -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
              <h1 class="h2 mb-2"><%= @listing.title %></h1>
              <p class="text-muted mb-0">
                <i class="fas fa-map-marker-alt me-1"></i>
                <%= [@listing.property.address, @listing.property.city, @listing.property.country].compact.join(', ') %>
              </p>
            </div>
            <div class="text-end">
              <span class="badge bg-<%= listing_type_badge_color(@listing.listing_type) %> fs-6 mb-2">
                <%= @listing.listing_type.humanize %>
              </span>
              <h3 class="text-primary mb-0">
                <%= format_listing_price(@listing) %>
              </h3>
            </div>
          </div>

          <!-- Property Stats -->
          <div class="row mb-4">
            <div class="col-6 col-md-3">
              <div class="text-center p-3 bg-light rounded">
                <i class="fas fa-bed fa-2x text-primary mb-2"></i>
                <div class="fw-bold"><%= @listing.property.bedrooms %></div>
                <small class="text-muted">Bedrooms</small>
              </div>
            </div>
            <div class="col-6 col-md-3">
              <div class="text-center p-3 bg-light rounded">
                <i class="fas fa-bath fa-2x text-primary mb-2"></i>
                <div class="fw-bold"><%= @listing.property.bathrooms %></div>
                <small class="text-muted">Bathrooms</small>
              </div>
            </div>
            <div class="col-6 col-md-3">
              <div class="text-center p-3 bg-light rounded">
                <i class="fas fa-ruler-combined fa-2x text-primary mb-2"></i>
                <div class="fw-bold"><%= number_with_delimiter(@listing.property.square_feet) %></div>
                <small class="text-muted">sq ft</small>
              </div>
            </div>
            <div class="col-6 col-md-3">
              <div class="text-center p-3 bg-light rounded">
                <i class="fas fa-calendar fa-2x text-primary mb-2"></i>
                <div class="fw-bold"><%= @listing.property.year_built %></div>
                <small class="text-muted">Built</small>
              </div>
            </div>
          </div>

          <!-- Description -->
          <h4>Description</h4>
          <p class="mb-4"><%= simple_format(@listing.description) %></p>

          <!-- Amenities -->
          <% if @listing.amenities.any? %>
            <h4>Amenities</h4>
            <div class="row mb-4">
              <% @listing.amenities.each do |amenity| %>
                <div class="col-md-6 mb-2">
                  <i class="<%= amenity_icon(amenity) %> me-2 text-primary"></i>
                  <%= amenity.name %>
                </div>
              <% end %>
            </div>
          <% end %>

          <!-- Additional Details -->
          <div class="row">
            <div class="col-md-6">
              <h5>Property Details</h5>
              <ul class="list-unstyled">
                <li><strong>Property Type:</strong> <%= @listing.property.property_type.humanize %></li>
                <li><strong>Furnished:</strong> <%= @listing.furnished? ? 'Yes' : 'No' %></li>
                <li><strong>Pets Allowed:</strong> <%= @listing.pets_allowed? ? 'Yes' : 'No' %></li>
                <li><strong>Utilities Included:</strong> <%= @listing.utilities_included? ? 'Yes' : 'No' %></li>
                <% if @listing.security_deposit.present? %>
                  <li><strong>Security Deposit:</strong> $<%= number_with_delimiter(@listing.security_deposit) %></li>
                <% end %>
              </ul>
            </div>
            <% if @listing.rental_listing? %>
              <div class="col-md-6">
                <h5>Lease Terms</h5>
                <ul class="list-unstyled">
                  <li><strong>Lease Duration:</strong> <%= @listing.lease_duration %> <%= @listing.lease_duration_unit.humanize %></li>
                  <% if @listing.minimum_stay %>
                    <li><strong>Minimum Stay:</strong> <%= @listing.minimum_stay %> days</li>
                  <% end %>
                  <% if @listing.maximum_stay %>
                    <li><strong>Maximum Stay:</strong> <%= @listing.maximum_stay %> days</li>
                  <% end %>
                  <% if @listing.available_from %>
                    <li><strong>Available From:</strong> <%= @listing.available_from.strftime('%B %d, %Y') %></li>
                  <% end %>
                  <% if @listing.available_until %>
                    <li><strong>Available Until:</strong> <%= @listing.available_until.strftime('%B %d, %Y') %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Related Listings -->
      <% if @related_listings.any? %>
        <div class="card">
          <div class="card-header">
            <h4 class="mb-0">Similar Properties</h4>
          </div>
          <div class="card-body">
            <div class="row">
              <% @related_listings.each do |listing| %>
                <div class="col-md-4 mb-3">
                  <div class="card h-100">
                    <% if listing.property.images.attached? %>
                      <%= image_tag listing.property.images.first, class: "card-img-top", style: "height: 150px; object-fit: cover;" %>
                    <% else %>
                      <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                        <i class="fas fa-home fa-2x text-muted"></i>
                      </div>
                    <% end %>
                    <div class="card-body">
                      <h6 class="card-title"><%= listing.title %></h6>
                      <p class="text-primary fw-bold mb-2">
                        <%= format_listing_price(listing) %>
                      </p>
                      <%= link_to "View", listing_path(listing), class: "btn btn-sm btn-primary" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <div class="card sticky-top">
        <div class="card-header">
          <h5 class="mb-0">Contact Owner</h5>
        </div>
        <div class="card-body">
          <div class="text-center mb-3">
            <% if @listing.user.avatar.attached? %>
              <%= image_tag @listing.user.avatar, class: "rounded-circle", size: "80x80" %>
            <% else %>
              <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                <i class="fas fa-user fa-2x text-white"></i>
              </div>
            <% end %>
            <div class="mt-2">
              <h6 class="mb-0"><%= @listing.user.profile&.display_name || @listing.user.email %></h6>
              <small class="text-muted">Property Owner</small>
            </div>
          </div>

          <% if user_signed_in? && current_user != @listing.user %>
            <div class="d-grid gap-2">
              <% if @listing.listing_type == 'rent' || @listing.listing_type == 'short_term' %>
                <%= link_to "Book Now", new_listing_booking_path(@listing), class: "btn btn-primary" %>
              <% end %>
              <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#contactModal">
                <i class="fas fa-envelope me-2"></i>Send Message
              </button>
              <button class="btn btn-outline-secondary">
                <i class="fas fa-phone me-2"></i>Call Owner
              </button>
            </div>
          <% else %>
            <% if user_signed_in? && current_user == @listing.user %>
              <div class="d-grid gap-2">
                <%= link_to "Edit Listing", edit_listing_path(@listing), class: "btn btn-primary" %>
                <%= link_to "View Bookings", listing_bookings_path(@listing), class: "btn btn-outline-primary" %>
                <%= link_to "Delete", listing_path(@listing), method: :delete,
                    class: "btn btn-outline-danger",
                    confirm: "Are you sure you want to delete this listing?" %>
              </div>
            <% else %>
              <p class="text-center text-muted">
                <%= link_to "Sign in", new_user_session_path %> to contact the owner
              </p>
            <% end %>
          <% end %>

          <hr>

          <div class="text-center">
            <small class="text-muted">
              Listed <%= time_ago_in_words(@listing.created_at) %> ago
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Contact Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Contact Property Owner</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with url: "#", local: true do |form| %>
          <div class="mb-3">
            <%= form.label :subject, class: "form-label" %>
            <%= form.text_field :subject, class: "form-control", value: "Inquiry about: #{@listing.title}" %>
          </div>
          <div class="mb-3">
            <%= form.label :message, class: "form-label" %>
            <%= form.text_area :message, class: "form-control", rows: 5, placeholder: "Hi, I'm interested in this property..." %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Send Message</button>
      </div>
    </div>
  </div>
</div>
<% content_for :title, "Chat with #{@conversation.other_participant(current_user).profile&.first_name || @conversation.other_participant(current_user).email.split('@').first}" %>

<div class="h-screen flex flex-col bg-white"
     data-controller="messages"
     data-messages-conversation-id-value="<%= @conversation.id %>"
     data-messages-current-user-id-value="<%= current_user.id %>">

  <!-- Chat Header -->
  <div class="flex-shrink-0 bg-white border-b border-gray-200 px-6 py-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-3">
        <%= link_to conversations_path, class: "text-gray-400 hover:text-gray-600 lg:hidden" do %>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>

        <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
          <span class="text-indigo-600 font-medium">
            <%= @conversation.other_participant(current_user).profile&.first_name&.first&.upcase ||
                @conversation.other_participant(current_user).email.first.upcase %>
          </span>
        </div>

        <div>
          <h1 class="text-lg font-medium text-gray-900">
            <%= @conversation.other_participant(current_user).profile&.full_name ||
                @conversation.other_participant(current_user).email.split('@').first %>
          </h1>
          <p class="text-sm text-gray-500" data-messages-target="userStatus">
            <!-- User online status will be updated via ActionCable -->
          </p>
        </div>
      </div>

      <div class="flex items-center space-x-2">
        <!-- Conversation Actions -->
        <div class="relative" data-controller="dropdown">
          <button type="button"
                  data-action="click->dropdown#toggle"
                  class="text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded-md p-2">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
            </svg>
          </button>

          <div data-dropdown-target="menu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 z-10">
            <div class="py-1">
              <%= link_to "Archive Conversation", conversation_path(@conversation),
                  method: :patch,
                  params: { conversation: { archived: true } },
                  class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100",
                  data: { confirm: "Archive this conversation?" } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Messages Container -->
  <div class="flex-1 overflow-y-auto px-6 py-4 space-y-4"
       data-messages-target="messagesContainer"
       id="messages-container">

    <% @messages.each do |message| %>
      <%= render 'messages/message', message: message, current_user: current_user, conversation: @conversation %>
    <% end %>

    <!-- Typing indicator -->
    <div data-messages-target="typingIndicator" class="hidden">
      <div class="flex items-center space-x-2 text-sm text-gray-500">
        <div class="flex space-x-1">
          <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce"></div>
          <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style="animation-delay: 0.1s;"></div>
          <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style="animation-delay: 0.2s;"></div>
        </div>
        <span data-messages-target="typingUser"></span>
      </div>
    </div>
  </div>

  <!-- Message Input -->
  <div class="flex-shrink-0 border-t border-gray-200 px-6 py-4">
    <%= form_with model: [@conversation, @message],
        local: false,
        data: {
          messages_target: "messageForm",
          action: "submit->messages#sendMessage"
        },
        class: "flex items-end space-x-4" do |f| %>

      <div class="flex-1">
        <%= f.text_area :content,
            placeholder: "Type a message...",
            data: {
              messages_target: "messageInput",
              action: "input->messages#handleTyping keydown->messages#handleKeydown"
            },
            class: "block w-full resize-none border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
            rows: 1 %>
      </div>

      <!-- File Upload Button -->
      <div class="flex items-center space-x-2">
        <label for="message_images" class="cursor-pointer text-gray-400 hover:text-gray-600">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <%= f.file_field :images, multiple: true, accept: "image/*", class: "hidden" %>
        </label>

        <label for="message_documents" class="cursor-pointer text-gray-400 hover:text-gray-600">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
          </svg>
          <%= f.file_field :documents, multiple: true, accept: ".pdf,.doc,.docx", class: "hidden" %>
        </label>
      </div>

      <%= f.submit "Send",
          data: { messages_target: "sendButton" },
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:opacity-50" %>
    <% end %>
  </div>
</div>

<!-- Include ActionCable connection for real-time features -->
<%= javascript_include_tag "actioncable", defer: true %>

<script>
  // Initialize ActionCable connection when page loads
  document.addEventListener('DOMContentLoaded', function() {
    if (typeof App !== 'undefined' && App.cable) {
      // Connection will be handled by the Stimulus controller
      console.log('ActionCable ready for conversation <%= @conversation.id %>');
    }
  });
</script>
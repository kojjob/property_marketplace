<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">My Bookings</h1>
    <% if @bookings.any? %>
      <div class="space-y-6">
        <% @bookings.each do |booking| %>
          <div class="bg-white shadow-lg rounded-lg p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h2 class="text-xl font-semibold text-gray-900"><%= booking.listing.property.title %></h2>
                <p class="text-gray-600"><%= booking.listing.property.address %>, <%= booking.listing.property.city %></p>
              </div>
              <span class="px-3 py-1 rounded-full text-sm font-medium <%= status_badge_class(booking.status) %>">
                <%= booking.status.titleize %>
              </span>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
              <div>
                <p class="text-sm text-gray-500">Check-in</p>
                <p class="font-medium"><%= booking.check_in_date %></p>
              </div>
              <div>
                <p class="text-sm text-gray-500">Check-out</p>
                <p class="font-medium"><%= booking.check_out_date %></p>
              </div>
              <div>
                <p class="text-sm text-gray-500">Total Amount</p>
                <p class="font-medium"><%= number_to_currency(booking.total_amount) %></p>
              </div>
            </div>
            <div class="flex justify-between items-center">
              <div class="flex items-center gap-2">
                <span class="text-sm text-gray-500">Payment Status:</span>
                <span class="<%= payment_status_class(booking.payment_status) %>"><%= booking.payment_status.titleize %></span>
              </div>
              <div class="flex space-x-2">
                <%= link_to "View Details", booking, class: "bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700" %>
                <% if booking.tenant == current_user && booking.confirmed? && booking.payment_status != 'paid' %>
                  <%= link_to "Make Payment", new_booking_payment_path(booking), class: "bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700" %>
                <% end %>
                <% if booking.tenant == current_user && booking.confirmed? %>
                  <%= link_to "Cancel", cancel_booking_path(booking), method: :patch, data: { confirm: "Are you sure?" }, class: "bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No bookings</h3>
        <p class="mt-1 text-sm text-gray-500">You haven't made any bookings yet.</p>
        <%= link_to "Browse Properties", properties_path, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>
    <% end %>
  </div>
</div>
